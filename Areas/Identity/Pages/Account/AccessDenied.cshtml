@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Acesso negado";
}

<header class="mt-5 text-center text-sm-left">
    <h1 class="text-danger border border-danger d-inline-block py-2 px-3 rounded">
        <i class="bi bi-x-octagon-fill"></i>
    </h1>
    <h1 class="text-danger">@ViewData["Title"]</h1>
    <p>
        Usuário não possui autorização para essa página.
        <br />Utilize uma conta de administrador.
    </p>
    <p>
        <a asp-page="/Index">Voltar para o início</a>
    </p>
</header>


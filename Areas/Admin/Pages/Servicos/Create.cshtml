@page "{id:int?}"
@model EmpreendedorismoEIT.Areas.Admin.Pages.Servicos.CreateModel
@using EmpreendedorismoEIT.Models 

@{
    ViewData["Title"] = "Adicionar P/S";
    ViewData["SectionTitle"] = Html.DisplayFor(model => model.Empresa.Nome);
    if (Model.Empresa.Tipo == Tipo.JUNIOR)
    {
        ViewData["Section"] = SectionManager.Juniores;
    }
    if (Model.Empresa.Tipo == Tipo.INCUBADA)
    {
        ViewData["Section"] = SectionManager.Incubadas;
    }
}

<form method="post">
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <h5 class="subtitle">Adicionar produto ou serviço</h5><hr class="mt-0" />
                <partial name="_ValidationMessage" />
            </div>
            <div class="form-group">
                <label asp-for="ProdServVM.Nome" class="control-label"></label>
                <input asp-for="ProdServVM.Nome" class="form-control maxcounter" />
                <span asp-validation-for="ProdServVM.Nome"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdServVM.Descricao" class="control-label"></label>
                <textarea asp-for="ProdServVM.Descricao" class="form-control maxcounter" rows="6"></textarea>
                <span asp-validation-for="ProdServVM.Descricao"></span>
            </div>
            <div class="form-group text-right">
                <a asp-page="Index" asp-route-id="@Model.Empresa.ID" class="btn btn-outline-secondary">Voltar</a>
                <input type="submit" class="btn btn-primary" value="Adicionar" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

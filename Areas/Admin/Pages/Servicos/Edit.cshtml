@page
@model EmpreendedorismoEIT.Areas.Admin.Pages.Servicos.EditModel

@{
    ViewData["Title"] = "Edit";
    ViewData["Section"] = "Juniores";
    ViewData["SectionTitle"] = "Lista de empresas juniores";
}

<h1>Edit</h1>

<h4>ProdutoServico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProdutoServico.ID" />
            <div class="form-group">
                <label asp-for="ProdutoServico.Nome" class="control-label"></label>
                <input asp-for="ProdutoServico.Nome" class="form-control" />
                <span asp-validation-for="ProdutoServico.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoServico.Descricao" class="control-label"></label>
                <input asp-for="ProdutoServico.Descricao" class="form-control" />
                <span asp-validation-for="ProdutoServico.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoServico.EmpresaID" class="control-label"></label>
                <select asp-for="ProdutoServico.EmpresaID" class="form-control" asp-items="ViewBag.EmpresaID"></select>
                <span asp-validation-for="ProdutoServico.EmpresaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

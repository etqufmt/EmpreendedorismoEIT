@page "{id:int?}"
@model EmpreendedorismoEIT.Areas.Admin.Pages.Tags.EditModel
@using EmpreendedorismoEIT.ViewModels

@{
    ViewData["Title"] = "Editar tag";
    ViewData["Section"] = "Tags";
    ViewData["SectionTitle"] = "Editar tag";
}

<div class="row">
    <div class="col-lg-6">
        <form method="post">
            <div class="row">
                <div class="col">
                    <div asp-validation-summary="ModelOnly" class="alert alert-info alert-dismissible custom-alert fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true"><i class="bi bi-x"></i></span>
                        </button>
                    </div>
                    <input type="hidden" asp-for="TagVM.ID" />
                    <div class="form-group">
                        <label asp-for="TagVM.Nome" class="control-label"></label>
                        <input asp-for="TagVM.Nome" class="form-control" />
                        <span asp-validation-for="TagVM.Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TagVM.Cor" class="control-label"></label>
                        <select asp-for="TagVM.Cor" class="form-control"
                                asp-items="@Html.GetEnumSelectList<Cores>().OrderBy(s => s.Text)"></select>
                        <span asp-validation-for="TagVM.Cor" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col text-right">
                    <a asp-page="Index" class="btn btn-outline-secondary">Voltar</a>
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
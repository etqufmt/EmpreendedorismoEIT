@page
@model EmpreendedorismoEIT.Areas.Admin.Pages.Tags.IndexModel

@{
    ViewData["Title"] = "Tags";
    ViewData["Section"] = SectionManager.Tags;
    ViewData["SectionTitle"] = "Tags";
}

<div class="form-row menu-bar">
    <div class="col-12 col-lg form-group align-self-center text-center text-lg-left">
        <h5 class="d-inline subtitle">Disponíveis para associação <span class="badge">@Model.ListaTags.Count</span></h5>
        <p class="my-1">Adicione tags que descrevam as empresas apoiadas pelo EIT por aspectos como área de atuação, campo acadêmico, tipo de serviço oferecido ou diferencial de mercado.</p>
    </div>
    <div class="col-6 offset-lg-1 col-lg-auto form-group">
        <a asp-page="CreateMultiple" class="btn btn-outline-primary w-100">Adicionar várias</a>
    </div>
    <div class="col-6 col-lg-auto form-group">
        <a asp-page="Create" class="btn btn-outline-primary w-100">Adicionar</a>
    </div>
</div>
@if (Model.ListaTags.Count == 0)
{
    <div class="row">
        <div class="offset-3 col-6 text-center py-4 my-5 rounded-lg msg-empty">
            <i class="bi bi-x-diamond icon-msg"></i><br />
            <span>Nenhuma tag encontrada.</span>
        </div>
    </div>
}
<div class="tag-list d-flex flex-wrap justify-content-center my-4">
    @foreach (var item in Model.ListaTags)
    {
        <div class="btn-group m-2" role="group">
            <a asp-page="Edit" asp-route-id="@item.ID" class="btn btn-secondary tag-button"
               style="background-color: @item.CorHTML;">
                <span id="tag-nome-@item.ID">@Html.DisplayFor(modelItem => item.Nome)</span>
            </a>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ModalScriptsPartial");}
}
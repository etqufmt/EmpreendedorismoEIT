@page
@model EmpreendedorismoEIT.Areas.Admin.Pages.Tags.CreateModel
@using EmpreendedorismoEIT.ViewModels

@{
    ViewData["Title"] = "Adicionar tag";
    ViewData["Section"] = "Tags";
    ViewData["SectionTitle"] = "Adicionar tag";
}

<div class="row">
    <div class="col-lg-6">
        <form method="post">
            <div class="row">
                <div class="col">
                    @if (!@Model.ModelState.IsValid)
                    {
                        <div class="alert alert-primary alert-dismissible fade show" role="alert" style="background: none !important;">
                            <div asp-validation-summary="ModelOnly"></div>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true"><i class="bi bi-x"></i></span>
                            </button>
                        </div>
                    }
                    <div class="form-group">
                        <label asp-for="TagVM.Nome" class="control-label"></label>
                        <input asp-for="TagVM.Nome" class="form-control" />
                        <span asp-validation-for="TagVM.Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TagVM.Cor" class="control-label"></label>
                        <select asp-for="TagVM.Cor" class="form-control"
                                asp-items="@Html.GetEnumSelectList<Cores>().OrderBy(s => s.Text)"></select>
                        <span asp-validation-for="TagVM.Cor" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col text-right">
                    <a asp-page="Index" class="btn btn-outline-secondary">Voltar</a>
                    <input type="submit" value="Criar" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
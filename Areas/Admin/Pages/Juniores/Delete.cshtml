@page "{id:int?}"
@model EmpreendedorismoEIT.Areas.Admin.Pages.Juniores.DeleteModel

@{
    ViewData["Title"] = "Excluir EJ";
    ViewData["Section"] = "Juniores";
    ViewData["SectionTitle"] = "Excluir empresa júnior?";
}

<div class="row">
    <div class="col-lg-6">
        <div class="row">
            <div class="col">
                <h4>@Html.DisplayFor(model => model.EmpresaJuniorVM.Nome)</h4><hr />
                <p class="text-danger">@Model.ErrorMessage</p>
            </div>
        </div>
        <dl class="row">
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.EmpresaJuniorVM.Campus)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.EmpresaJuniorVM.Campus)
            </dd>
            <dt class="col-md-4">Descrição</dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.EmpresaJuniorVM.DescricaoCurta)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.EmpresaJuniorVM.Situacao)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.EmpresaJuniorVM.Situacao)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.EmpresaJuniorVM.UltimaModificacao)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.EmpresaJuniorVM.UltimaModificacao)
            </dd>
        </dl>
        <div class="row">
            <div class="col text-right">
                <form method="post">
                    <input type="hidden" asp-for="EmpresaJuniorVM.ID" />
                    <a asp-page="./Details" asp-route-id="@Model.EmpresaJuniorVM.ID" class="btn btn-secondary">Voltar</a>
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>

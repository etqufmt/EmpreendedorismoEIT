@page "{id:int?}"
@model EmpreendedorismoEIT.Areas.Admin.Pages.Juniores.DetailsModel

@{
    ViewData["Title"] = "Dados EJ";
    ViewData["Section"] = "Juniores";
    ViewData["SectionTitle"] = "Dados da empresa júnior";
}

<div class="row">
    <div class="col-lg-6">
        <h4 id="ej-nome-@Model.JuniorVM.ID">@Html.DisplayFor(model => model.JuniorVM.Nome)</h4><hr />
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <dl class="row mb-0">
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.JuniorVM.Campus)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.JuniorVM.Campus)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.JuniorVM.Instituto)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.JuniorVM.Instituto)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.JuniorVM.DescricaoCurta)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.JuniorVM.DescricaoCurta)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.JuniorVM.DescricaoLonga)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.JuniorVM.DescricaoLonga)
            </dd>
        </dl>
    </div>
    <div class="col-lg-6">
        <dl class="row mb-0">
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.JuniorVM.Endereco)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.JuniorVM.Endereco)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.JuniorVM.Telefone)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.JuniorVM.Telefone)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.JuniorVM.Email)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.JuniorVM.Email)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.JuniorVM.Situacao)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.JuniorVM.Situacao)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.JuniorVM.UltimaModificacao)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => model.JuniorVM.UltimaModificacao)
            </dd>
        </dl>
        <div class="row mt-3">
            <div class="col">
@if (!String.IsNullOrEmpty(@Model.ErrorMessage))
{
                <div class="alert alert-primary alert-dismissible fade show" role="alert" style="background: none !important;">
                    @Model.ErrorMessage
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true"><i class="bi bi-x"></i></span>
                    </button>
                </div>
}
                <div class="text-center">
                    <a asp-page="./Index" class="btn btn-secondary">Voltar</a>
                    <button type="button" class="btn btn-primary"
                            data-toggle="modal" data-target="#modal-excluir"
                            data-id="@Model.JuniorVM.ID" data-item="ej-nome-@Model.JuniorVM.ID">
                        Excluir
                    </button>
                    <a asp-page="./Edit" asp-route-id="@Model.JuniorVM.ID" class="btn btn-primary">Editar</a>
                </div>
            </div>
        </div>
    </div>
</div>
@*Modal para excluir empresa*@
<div class="modal fade" id="modal-excluir" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Excluir empresa júnior</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir a empresa "<span class="modal-item-text"></span>"?</p>
            </div>
            <div class="modal-footer">
                <form method="post" asp-page="./Delete">
                    <input type="hidden" asp-for="JuniorVM.ID" class="modal-item-id" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ModalScriptsPartial");}
}
@page "{id:int?}"
@model EmpreendedorismoEIT.Areas.Admin.Pages.Juniores.DetailsModel

@{
    ViewData["Title"] = "Detalhes EJ";
    ViewData["Section"] = SectionManager.Juniores;
    ViewData["SectionTitle"] = Html.DisplayFor(model => model.JuniorVM.Nome);
    var logoURL = String.IsNullOrEmpty(Model.Logo) ? @Url.Content("~/images/empty_logo.png") : @Url.Content("~/logo/" + Model.Logo);
}

@if (!String.IsNullOrEmpty(@Model.ErrorMessage))
{
    <div class="alert alert-info alert-dismissible custom-alert fade show" role="alert">
        <span>@Model.ErrorMessage</span>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true"><i class="bi bi-x"></i></span>
        </button>
    </div>
}
<div class="row">
    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="row no-gutters">
                <div class="col-7 border-right">
                    <img class="card-img-left" alt="logo"
                         src="@logoURL">
                </div>
                <div class="col-5 d-flex flex-column align-content-stretch">
                    <div class="flex-grow-1">
                        <a asp-area="Admin" asp-page="/Servicos/Index" asp-route-id="@Model.JuniorVM.ID">
                            <div class="h-100 card-btn-lateral border-bottom text-truncate d-flex align-items-center px-3">Serviços</div>
                        </a>
                    </div>
                    <div class="flex-grow-1">
                        <a asp-area="Admin" asp-page="/Redes/Index" asp-route-id="@Model.JuniorVM.ID">
                            <div class="h-100 card-btn-lateral border-bottom text-truncate d-flex align-items-center px-3">Redes sociais</div>
                        </a>
                    </div>
                    <div class="flex-grow-1">
                        <a asp-area="Admin" asp-page="/EmpTags/Index" asp-route-id="@Model.JuniorVM.ID">
                            <div class="h-100 card-btn-lateral text-truncate d-flex align-items-center px-3">Recomendação</div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <dl class="row mb-0">
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.JuniorVM.Endereco)
            </dt>
            <dd class="col-md-8 border-custom">
                @Html.DisplayFor(model => model.JuniorVM.Endereco)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.JuniorVM.Telefone)
            </dt>
            <dd class="col-md-8 border-custom">
                @Html.DisplayFor(model => model.JuniorVM.Telefone)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.JuniorVM.Email)
            </dt>
            <dd class="col-md-8 border-custom">
                @Html.DisplayFor(model => model.JuniorVM.Email)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.JuniorVM.Situacao)
            </dt>
            <dd class="col-md-8 border-custom">
                @Html.DisplayFor(model => model.JuniorVM.Situacao)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.JuniorVM.UltimaModificacao)
            </dt>
            <dd class="col-md-8 border-custom">
                @Html.DisplayFor(model => model.JuniorVM.UltimaModificacao)
            </dd>
        </dl>
    </div>
    <div class="col-lg-6">
        <dl class="row mb-0">
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.JuniorVM.Campus)
            </dt>
            <dd class="col-md-8 border-custom">
                @Html.DisplayFor(model => model.JuniorVM.Campus)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.JuniorVM.Instituto)
            </dt>
            <dd class="col-md-8 border-custom">
                @Html.DisplayFor(model => model.JuniorVM.Instituto)
            </dd>
            <dt class="col-md-4 pr-xl-3">
                @Html.DisplayNameFor(model => model.JuniorVM.DescricaoCurta)
            </dt>
            <dd class="col-md-8 border-custom">
                @Html.DisplayFor(model => model.JuniorVM.DescricaoCurta)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.JuniorVM.DescricaoLonga)
            </dt>
            <dd class="col-md-8 border-custom">
                @Html.DisplayFor(model => model.JuniorVM.DescricaoLonga)
            </dd>
        </dl>
    </div>
</div>
<div class="row mt-3">
    <div class="col text-right">
        <hr />
        <a asp-page="./Index" class="btn btn-outline-secondary">Voltar para lista</a>
        <button type="button" class="btn btn-outline-danger"
                data-toggle="modal" data-target="#modal-delete"
                data-id="@Model.JuniorVM.ID" data-tag="SectionTitle">
            Excluir
        </button>
        <a asp-page="./Edit" asp-route-id="@Model.JuniorVM.ID" class="btn btn-outline-primary">Editar</a>
    </div>
</div>

@* Modal de exclusão *@
<div class="modal fade" id="modal-delete" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Excluir empresa júnior</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir a empresa "<span class="modal-item-text"></span>"?</p>
            </div>
            <div class="modal-footer">
                <form method="post" asp-page="./Delete">
                    <input type="hidden" asp-for="JuniorVM.ID" class="modal-item-id" />
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancelar</button>
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ModalScriptsPartial");}
}
@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    //var emptyImage = "data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7";
}

<section class="py-4">
    <div class="row no-gutters">
        <div class="col-lg-8 p-4">
            <img src="~/images/placeholder.png" width="600" height="300" alt="nuvem" class="w-100 banner" />
        </div>
        <div class="col-lg-4 p-4 text-center text-lg-left">
            <p class="desc">Descubra qual empresa oferece os serviços que você procura.</p>
            <a href="" class="btn btn-lg btn-primary">Faça o teste</a>
        </div>
    </div>
</section>
<section class="py-4 px-sm-5">
    <div class="text-center mb-4">
        <h1>Ecossistema</h1>
    </div>
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4">
        @foreach (var item in Model.ListaEmp)
        {
            <div class="col card-col p-3 p-sm-4">
                <a asp-page="Details" asp-route-id="@item.ID" class="card-link">
                    <div class="card card-emp">
                        <img src="@(String.IsNullOrEmpty(item.Logo)? "../images/empty_logo.png" : "../logo/" + item.Logo)"
                             class="card-img-top" alt="logo">
                        <div class="card-body border-top">
                            <h5 class="card-title text-truncate">@Html.DisplayFor(modelItem => item.Nome)</h5>
                            <p class="card-text emp-text">@Html.DisplayFor(modelItem => item.Tipo)</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</section>